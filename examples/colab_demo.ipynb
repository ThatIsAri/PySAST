    import sqlite3
    conn = sqlite3.connect("test.db")
    cursor = conn.cursor()

    # –ë–µ–∑–æ–ø–∞—Å–Ω—ã–π –∫–æ–¥ - –ø–∞—Ä–∞–º–µ—Ç—Ä–∏–∑–æ–≤–∞–Ω–Ω—ã–µ –∑–∞–ø—Ä–æ—Å—ã
